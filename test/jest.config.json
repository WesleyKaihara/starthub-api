{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/service/*.(t|j)s",
    "<rootDir>/src/**/http/*.(t|j)s",
    "<rootDir>/src/**/useCase/**/*.(t|j)s"
  ],
  "coverageReporters": [
    "json",
    "html"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1",
    "^@discussion/(.*)$": "<rootDir>/src/module/discussion/$1",
    "^@identity/(.*)$": "<rootDir>/src/module/identity/$1",
    "^@project/(.*)$": "<rootDir>/src/module/project/$1",
    "^@analysis/(.*)$": "<rootDir>/src/module/analysis/$1",
    "^@payment/(.*)$": "<rootDir>/src/module/payment/$1",
    "^@product/(.*)$": "<rootDir>/src/module/product/$1",
    "^@upload/(.*)$": "<rootDir>/src/module/upload/$1"
  }
}