{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/src/**/__test__/e2e/*.spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1",
    "^@identity/(.*)$": "<rootDir>/src/module/identity/$1",
    "^@project/(.*)$": "<rootDir>/src/module/project/$1",
    "^@analysis/(.*)$": "<rootDir>/src/module/analysis/$1",
    "^@payment/(.*)$": "<rootDir>/src/module/payment/$1"
  }
}
